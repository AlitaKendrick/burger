<div class='row'>
  <div class='col s6'>
    <h3>Burgers Wanted</h3>
    <ul>
      {{#each burger_data}}
        {{#unless this.devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}
        <span>
          <form method='post' action='/devour/{{this.burger_name}}'><button>Devour it!</button></form>
        </span>
      </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class='col s6'>
    <h3>Demolished Burgers</h3>
    <ul>
      {{#each burger_data}}
        {{#if this.devoured}}
      <li>{{this.burger_name}}
        <span>
           <form action="/{{this.id}}?_method=PUT" method="POST">
            <p>{{this.id}}. {{this.burger_name}}
            <input type="hidden" name="devoured" value="1">
            <button class="btn-primary" type="submit">Devour It!</button></p>
          </form></li>
        </span>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col s4 offset-s4">
    <form method='POST' action='/create'>
      <input type="text" name="burger_name"></input>
      <button type="submit" class="col s4 offset-s4">Order Burger</button>
    </form>
  </div>  
</div>